<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_layout"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="50dp"
    android:layout_marginLeft="200dp"
    android:layout_marginRight="200dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quick Book"
        android:id="@+id/textView"
        android:background="@drawable/custom_layout1"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:fontFamily="DroidSans.ttf"/>

    <AutoCompleteTextView
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:hint="Enter your name"
            android:id="@+id/autoCompleteTextView"
            android:padding="5dp"
            android:typeface="monospace"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:background="@drawable/shape"
            android:inputType="textNoSuggestions"
            android:fontFamily="DroidSans.ttf" />

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="Select duration :"
            android:id="@+id/textView2"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:fontFamily="DroidSans.ttf"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/duration1"
            android:padding="5dp"
            android:id="@+id/durationGroup"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 Minutes"
                android:id="@+id/duration1"
                android:layout_marginLeft="20dp"
                android:fontFamily="DroidSans.ttf"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Hour"
                android:id="@+id/duration2"
                android:layout_marginLeft="20dp"
                android:fontFamily="DroidSans.ttf"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:30 Hours"
                android:id="@+id/duration3"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:fontFamily="DroidSans.ttf"/>

        </RadioGroup>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <Button
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="Cancel"
                android:id="@+id/cancelButton"
                android:background="@drawable/button_layout"
                android:layout_marginRight="20dp"
                android:fontFamily="DroidSans.ttf"/>

            <Button
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="Book"
                android:id="@+id/bookButton"
                android:background="@drawable/button_layout"
                android:fontFamily="DroidSans.ttf"/>
        </TableRow>

    </LinearLayout>
